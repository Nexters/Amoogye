<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_portion_human_one"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:text="1"
                android:textAlignment="center"
                android:background="@drawable/number_input_non_focus_wrap_rounded_box"/>

            <TextView
                android:id="@+id/txt_portion_human_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명 기준"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/edit_portion_human_one"
                android:layout_marginStart="6dp"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/edit_portion_amount"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:text="50"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_portion_human_one"
                android:background="@drawable/number_input_non_focus_wrap_rounded_box"/>

            <EditText
                android:id="@+id/edit_portion_unit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:text="ml"
                android:textAlignment="center"
                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                android:layout_toEndOf="@+id/edit_portion_amount"
                android:layout_marginStart="8dp"
                android:cursorVisible="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/edit_portion_unit"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_portion_human_two"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="36dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:text="1"
                android:textAlignment="center"
                android:background="@drawable/number_input_non_focus_wrap_rounded_box"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명 기준으로"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/edit_portion_human_two"
                android:layout_marginStart="6dp" />

        </RelativeLayout>
    </LinearLayout>
</layout>