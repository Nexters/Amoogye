<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_middle_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/layout_tools_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_popup_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btn_convert_add_util_activity"
                android:paddingEnd="10dp"
                android:src="@drawable/amoogye" />

            <ImageButton
                android:id="@+id/btn_convert_add_util_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/keyboard_icon_next" />

            <TextView
                android:id="@+id/txt_tools_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_convert_add_util_activity"
                android:text="계량도구"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_tools_top_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_tools_title"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/layout_tools_tab_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_middle_top">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/layout_Tools_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f7" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_tools_dimScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:visibility="visible" />

</RelativeLayout>