<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/number_button_wrap_rounded_box"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="1"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="2"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="3"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="4"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="5"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="6"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="7"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="8"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="9"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_non_dot"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/layout_btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="0"
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_square_r"
                android:text="."
                android:textColor="@color/number_button_text_color"
                android:textSize="@dimen/number_button_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/keyboard_icon_backspace" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>