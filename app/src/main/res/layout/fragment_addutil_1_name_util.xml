<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_add_util_1_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_add_util_1_bottom">

        <RelativeLayout
            android:id="@+id/layout_outer_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/img_add_util_1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_popup_message" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_outer_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_outer_top">

            <RelativeLayout
                android:id="@+id/layout_addutil_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_mid_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_addutil_tab_layout">

                <TextView
                    android:id="@+id/txt_title_1_name_util"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="새로운 계량 도구"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_title_1_name_util"
                    android:text="새로운 도구의 이름을 적어주세요" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_mid_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_mid_2">

                <EditText
                    android:id="@+id/edit_txt_name_util"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btn_addutil_name_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:src="@drawable/amoogye" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_add_util_1_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_add_util_name_1_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음" />
    </RelativeLayout>

</RelativeLayout>