<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/setting_text_display"
                android:text="화면설정"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:padding="13dp"
                android:background="@drawable/setting_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/setting_text_onoffDisplay"
                android:text="꺼짐방지"
                android:textSize="14sp"
                android:padding="13dp"
                android:layout_below="@id/setting_text_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Switch
                android:id="@+id/setting_switch_onoffDisplay"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:layout_below="@id/setting_text_display"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/setting_text_alarm"
                android:text="알람설정"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:padding="13dp"
                android:background="@drawable/setting_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/setting_text_sound"
                android:text="사운드"
                android:textSize="14sp"
                android:padding="13dp"
                android:layout_below="@id/setting_text_alarm"
                android:background="@drawable/setting_border_soft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Switch
                android:id="@+id/setting_switch_sound"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:layout_below="@id/setting_text_alarm"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/setting_text_vibration"
                android:text="진동"
                android:textSize="14sp"
                android:padding="13dp"
                android:layout_below="@id/setting_text_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Switch
                android:id="@+id/setting_switch_vibration"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:layout_below="@id/setting_switch_sound"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/text_contact"
                android:text="개발자 컨택"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:padding="13dp"
                android:background="@drawable/setting_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/text_contact_email"
                android:text="sheiflei@gmail.com"
                android:textSize="14sp"
                android:padding="13dp"
                android:layout_below="@id/text_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>