<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="timerVM"
                type="cookcook.nexters.com.amoogye.views.timer.presenter.TimerViewModel"
        />
    </data>

    <LinearLayout
            android:background="@color/main_background_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.53"
                android:background="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/edit_hour"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:text="@{timerVM.hourText}"
                        android:selection="@{timerVM.hourText.length}"
                        android:background="@drawable/number_input_wrap_rounded_box"
                        android:layout_height="30dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:text="시간"/>

                <EditText
                        android:id="@+id/edit_minute"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:text="@{timerVM.minuteText}"
                        android:selection="@{timerVM.minuteText.length}"
                        android:background="@drawable/number_input_wrap_rounded_box"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:text="분"/>

                <EditText
                        android:id="@+id/edit_second"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:text="@{timerVM.secondText}"
                        android:selection="@{timerVM.secondText.length}"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/number_input_wrap_rounded_box"
                        android:layout_height="30dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:text="초 뒤 알려줄게!"/>
            </LinearLayout>
        </RelativeLayout>

        <View android:layout_width="match_parent"
              android:layout_height="4dp"
              android:background="@color/main_background_color"/>

        <include layout="@layout/layout_number_button_wrap"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.47"/>

    </LinearLayout>
</layout>