<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="calculatorVM"
            type="cookcook.nexters.com.amoogye.views.calc.presenter.CalculatorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.53"
            android:background="@color/white"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/calc_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/btn_tip"
                    android:background="@android:color/transparent"
                    android:src="@drawable/history" />

                <ImageButton
                    android:id="@+id/btn_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/tool_tip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calc_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calc_layout_top"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/txt_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_r"
                    android:text="재료"
                    android:textColor="#131c32"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_calc_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/txt_ingredient"
                    android:fontFamily="@font/nanum_square_r"
                    android:text="+"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_human"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/txt_calc_plus"
                    android:fontFamily="@font/nanum_square_r"
                    android:text="인원"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calculator_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/calc_layout_bottom"
                android:layout_below="@+id/calc_text_container"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/hide_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/hide_layout_human_top_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/hide_edit_twice_human_one"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.humanOne}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <TextView
                                android:id="@+id/hide_txt_twice_human_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/hide_edit_twice_human_one"
                                android:singleLine="true"
                                android:text="명 기준"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/hide_layout_ingredient_top_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/hide_layout_human_top_standard">


                            <EditText
                                android:id="@+id/hide_edit_twice_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.amount}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <RelativeLayout
                                android:id="@+id/hide_layout_weight_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/hide_edit_twice_amount">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/hide_edit_twice_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/calc_edit_box_size"
                                        android:layout_marginStart="4dp"
                                        android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                        android:cursorVisible="false"
                                        android:minWidth="@dimen/calc_edit_box_size"
                                        android:paddingStart="@dimen/calc_edit_padding"
                                        android:paddingEnd="@dimen/calc_edit_padding"
                                        android:singleLine="true"
                                        android:text="@{calculatorVM.unit}"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/calc_edit_text_size" />


                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/hide_layout_ingredient_wrap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/hide_layout_weight_standard">

                                <TextView
                                    android:id="@+id/hide_txt_twice_dml"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:singleLine="true"
                                    android:text="의"
                                    android:textSize="@dimen/calc_text_size" />

                                <EditText
                                    android:id="@+id/hide_edit_twice_ingredient"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/calc_edit_box_size"
                                    android:layout_marginStart="8dp"
                                    android:layout_toEndOf="@id/hide_txt_twice_dml"
                                    android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                    android:cursorVisible="false"
                                    android:minWidth="@dimen/calc_edit_box_size"
                                    android:paddingStart="@dimen/calc_edit_padding"
                                    android:paddingEnd="@dimen/calc_edit_padding"
                                    android:singleLine="true"
                                    android:text="@{calculatorVM.ingredient}"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/calc_edit_text_size" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/hide_layout_ingredient_wrap"
                                android:singleLine="true"
                                android:text="를"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:id="@+id/hide_layout_human_bottom_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/hide_edit_twice_human_two"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.humanTwo}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <TextView
                                android:id="@+id/hide_txt_twice_human_standard_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/hide_edit_twice_human_two"
                                android:singleLine="true"
                                android:text="명"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/hide_layout_ingredient_bottom_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/hide_layout_human_bottom_standard">

                            <EditText
                                android:id="@+id/hide_edit_twice_tool"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.tool}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/hide_layout_ingredient_bottom_standard"
                            android:singleLine="true"
                            android:text="으로"
                            android:textSize="@dimen/calc_text_size" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layout_human_top_standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edit_twice_human_one"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.humanOne}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <TextView
                                android:id="@+id/txt_twice_human_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@+id/edit_twice_human_one"
                                android:singleLine="true"
                                android:text="명 기준"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_ingredient_top_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/layout_human_top_standard">


                            <EditText
                                android:id="@+id/edit_twice_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.amount}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <RelativeLayout
                                android:id="@+id/layout_weight_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/edit_twice_amount">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/edit_twice_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/calc_edit_box_size"
                                        android:layout_marginStart="4dp"
                                        android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                        android:cursorVisible="false"
                                        android:minWidth="@dimen/calc_edit_box_size"
                                        android:paddingStart="@dimen/calc_edit_padding"
                                        android:paddingEnd="@dimen/calc_edit_padding"
                                        android:singleLine="true"
                                        android:text="@{calculatorVM.unit}"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/calc_edit_text_size" />


                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_ingredient_wrap"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/layout_weight_standard">

                                <TextView
                                    android:id="@+id/txt_twice_dml"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:singleLine="true"
                                    android:text="의"
                                    android:textSize="@dimen/calc_text_size" />

                                <EditText
                                    android:id="@+id/edit_twice_ingredient"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/calc_edit_box_size"
                                    android:layout_marginStart="8dp"
                                    android:layout_toEndOf="@id/txt_twice_dml"
                                    android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                    android:cursorVisible="false"
                                    android:minWidth="@dimen/calc_edit_box_size"
                                    android:paddingStart="@dimen/calc_edit_padding"
                                    android:paddingEnd="@dimen/calc_edit_padding"
                                    android:singleLine="true"
                                    android:text="@{calculatorVM.ingredient}"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/calc_edit_text_size" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@id/layout_ingredient_wrap"
                                android:singleLine="true"
                                android:text="를"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:id="@+id/layout_human_bottom_standard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edit_twice_human_two"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.humanTwo}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />

                            <TextView
                                android:id="@+id/txt_twice_human_standard_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@+id/edit_twice_human_two"
                                android:singleLine="true"
                                android:text="명"
                                android:textSize="@dimen/calc_text_size" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_ingredient_bottom_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/layout_human_bottom_standard">

                            <EditText
                                android:id="@+id/edit_twice_tool"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/calc_edit_box_size"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/number_input_non_focus_wrap_rounded_box"
                                android:cursorVisible="false"
                                android:minWidth="@dimen/calc_edit_box_size"
                                android:paddingStart="@dimen/calc_edit_padding"
                                android:paddingEnd="@dimen/calc_edit_padding"
                                android:singleLine="true"
                                android:text="@{calculatorVM.tool}"
                                android:textAlignment="center"
                                android:textSize="@dimen/calc_edit_text_size" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@+id/layout_ingredient_bottom_standard"
                            android:singleLine="true"
                            android:text="으로"
                            android:textSize="@dimen/calc_text_size" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calc_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btn_calc_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#ff4f34"
                    android:fontFamily="@font/nanum_square_r"
                    android:text="바꾸면"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

                <RelativeLayout
                    android:id="@+id/layout_calc_result"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/number_input_wrap_rounded_box"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_calc_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/timer_theme_color" />

                    <RelativeLayout
                        android:id="@+id/layout_calc_delete_wrap"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/keyboard_icon_search_delete" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/main_background_color" />

        <FrameLayout
            android:id="@+id/calc_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.47">

            <include
                android:id="@+id/calc_layout_button"
                layout="@layout/layout_number_button_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <include
                android:id="@+id/calc_layout_unit"
                layout="@layout/layout_unit_button_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/calc_layout_ingredient"
                layout="@layout/layout_ingredient_scroll_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>
</layout>