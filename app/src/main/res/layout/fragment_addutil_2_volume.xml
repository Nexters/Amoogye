<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_outer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txt_title_1_name_util"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_b"
            android:text="@string/add_util_volume_head"
            android:textColor="@color/add_util_text_color"
            android:textSize="@dimen/add_util_head_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_outer_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_outer_top"
        android:layout_marginTop="@dimen/add_util_head_comment_top"
        android:background="@drawable/add_util_title_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text="@string/add_util_volume_comment_1"
            android:textColor="@color/add_util_text_color_soft"
            android:textSize="@dimen/add_util_head_comment_text_size" />

        <TextView
            android:id="@+id/txt_2_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text=" 내 밥그릇"
            android:textColor="@color/add_util_text_color_soft"
            android:textSize="@dimen/add_util_head_comment_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text="@string/add_util_volume_comment_2"
            android:textColor="@color/add_util_text_color_soft"
            android:textSize="@dimen/add_util_head_comment_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_outer_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_util_volume_box_height"
        android:layout_below="@id/layout_outer_mid"
        android:layout_marginTop="@dimen/add_util_volume_box_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_util_tool"
            android:layout_width="@dimen/add_util_volume_box_1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_util_volume_box_end"
            android:background="@drawable/add_util_box_border"
            android:fontFamily="@font/nanum_square_r"
            android:padding="0dp"
            android:text="종이컵"
            android:textAlignment="viewStart"
            android:textColor="@color/add_util_main_color"
            android:textSize="@dimen/add_util_box_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_util_volume_text_end"
            android:fontFamily="@font/nanum_square_r"
            android:text="@string/add_util_volume_by"
            android:textColor="@color/add_util_text_color"
            android:textSize="@dimen/add_util_volume_count_text_size" />

        <Button
            android:id="@+id/btn_add_util_integer"
            android:layout_width="@dimen/add_util_volume_box_2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_util_volume_box_end"
            android:background="@drawable/add_util_box_border"
            android:fontFamily="@font/nanum_square_r"
            android:padding="0dp"
            android:text="1"
            android:textAlignment="viewStart"
            android:textColor="@color/add_util_main_color"
            android:textSize="@dimen/add_util_box_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_util_volume_text_end"
            android:fontFamily="@font/nanum_square_r"
            android:text="@string/add_util_volume_dot"
            android:textColor="@color/add_util_text_color"
            android:textSize="@dimen/add_util_volume_count_text_size" />

        <Button
            android:id="@+id/btn_add_util_decimal_point"
            android:layout_width="@dimen/add_util_volume_box_2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/add_util_volume_box_end"
            android:background="@drawable/add_util_box_border"
            android:fontFamily="@font/nanum_square_r"
            android:padding="0dp"
            android:text="0"
            android:textAlignment="viewStart"
            android:textColor="@color/add_util_main_color"
            android:textSize="@dimen/add_util_box_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_r"
            android:text="@string/add_util_volume_how_many"
            android:textColor="@color/add_util_text_color"
            android:textSize="@dimen/add_util_volume_count_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_send_volume_1_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_outer_bottom"
        android:orientation="vertical">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_container_scroll_picker"
        android:background="@drawable/add_util_picker_top_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_outer_mid"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/btn_add_util_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/add_util_picker_top_border"
            android:text="완료"
            android:textAlignment="viewEnd"
            android:visibility="invisible" />

        <include
            android:id="@+id/scroll_picker"
            layout="@layout/layout_ingredient_scroll_wrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>