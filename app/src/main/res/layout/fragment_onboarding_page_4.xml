<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72">
        <VideoView
            android:id="@+id/video_view_onboarding_2"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/btn_start_onboarding_2"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="0.28">

        <TextView
            android:id="@+id/txt_onboarding_4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/nanum_square_r"
            android:lineSpacingExtra="12sp"
            android:text="@string/onboarding_4_title"
            android:textColor="@color/number_button_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_onboarding_4_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_onboarding_4_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textAlignment="center"
            android:lineHeight="24sp"
            android:lineSpacingExtra="10sp"
            android:text="@string/onboarding_4_contents"
            android:textColor="#33131c32"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>