<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_history_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/calc_history_date"
            android:text="2019년 8월 22일 토요일"
            android:background="@drawable/calc_history_date_background"
            android:textSize="@dimen/calc_history_date_text_size"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_square_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/layout_history_date"
        android:background="@drawable/calc_history_result_background"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calc_history_result_before"
            android:text="4명 기준 설탕 500g"
            android:textSize="@dimen/calc_history_result_text_size"
            android:textColor="@color/tools_list_text_color"
            android:fontFamily="@font/nanum_square_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/calc_history_equal"
            android:text="="
            android:textSize="@dimen/calc_history_result_text_size"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/nanum_square_r"
            android:textColor="@color/tools_list_text_color"
            android:layout_toEndOf="@id/calc_history_result_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/calc_history_result_after"
            android:layout_toEndOf="@id/calc_history_equal"
            android:text="3명 기준 1 종이컵"
            android:textSize="@dimen/calc_history_result_text_size"
            android:fontFamily="@font/nanum_square_r"
            android:textColor="@color/tools_list_main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>