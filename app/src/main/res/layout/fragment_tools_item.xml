<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/item_border"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:layout_height="50dp">
    <CheckBox
            android:id="@+id/checkBox_lifeTool_Item"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/txt_measureUnit_bold"
            android:text=""
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/checkBox_lifeTool_Item"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/txt_measureUnit_soft"
            android:text=""
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/txt_measureUnit_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ToggleButton
            android:id="@+id/toggle_tools_item_onoff"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>